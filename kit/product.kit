<!DOCTYPE html>
<html>
<head>
	<!-- @import "partials/head" -->
</head>
<body>
	<!-- $menuHomeActive = nil -->
  	<!-- $menuProductActive = active -->
  	<!-- $menuSupportActive = nil -->
  	<!-- $menuAboutActive = nil -->
	<!-- @import "partials/header" -->
		<div id="content">
			<div class="container">
				<div class="row">
					<div class="col-md-3">
						<div class="widget clearfix">
							<div class="categories col-md-12 col-xs-6">
								<h3>Categories</h3>
								<ul class="nav">
									<li><div class="tope active" data-filter="*">All</div></li>
									<li><div class="tope" data-filter=".men">Men</div></li>
									<li><div class="tope" data-filter=".women">Women</div></li>
									<li><div class="tope" data-filter=".childrens">Childrens</div></li>
								</ul>
							</div>
							<div class="price col-md-12 col-xs-6">
								<h3>Price Filter</h3>
								<div id="slider-range">
									<label id="amount1"></label>
									<label id="amount2"></label>
								</div>
							</div>
							<div class="sizes col-md-12 col-xs-6">
								<h3>Sizes</h3>
								<ul class="nav">
									<li><div class="size active" data-filter=".small">Small</div></li>
									<li><div class="size" data-filter=".medium">Medium</div></li>
									<li><div class="size" data-filter=".large">Large</div></li>
									<li><div class="size" data-filter=".x-large">X Large</div></li>
								</ul>
							</div>
							<div class="brands col-md-12 col-xs-6">
								<h3>Brands</h3>
								<ul class="nav">
									<li><div class="brand active" data-filter=".reebok">Reebok</div></li>
									<li><div class="brand" data-filter=".addidas">Addidas</div></li>
									<li><div class="brand" data-filter=".nike">Nike</div></li>
									<li><div class="brand" data-filter=".zara">Zara</div></li>
								</ul>
							</div>
						</div>
					</div>
					<div class="col-md-9 single">
						<div class="row grid">
						</div>
						<div class="modal fade" id="imagemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
						  	<div class="modal-dialog modal-md">
						    	<div class="modal-content">              
						      		<div class="modal-body">
								      	<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
								      	<h3 class="name"></h3>
								        <img src="" class="imagepreview">
								        <p id="price"></p>
								        <div class="col-md-4">
								        	<h5><b>Category: </b><span id="category"></span></h5>
								        </div>
								        <div class="col-md-4">
								        	<h5><b>Size: </b><span id="size"></span></h5>
								        </div>
								        <div class="col-md-4">
								        	<h5><b>Brand: </b><span id="brand"></span></h5>
								        </div>
								       	<h4></h4>
								        <form>
								        	<div class="form-group">
										    	<label for="name">Name</label>
										    	<input type="text" class="form-control" id="name" placeholder="Enter Name">
										  	</div>
										  	<div class="form-group">
										    	<label for="address">Address</label>
										    	<input type="text" class="form-control" id="address" placeholder="Enter Address">
										  	</div>
										  	<div class="form-group">
										    	<label for="phone">Phone</label>
										    	<input type="text" class="form-control" id="phone" placeholder="Enter Phone">
										  	</div>
										  	<div class="form-group">
										    	<label for="email">Email address</label>
										    	<input type="name" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter Email">
										    	<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
										  	</div>
										  	<div class="form-group">
											    <label for="number">Choose number of quality</label>
											    <select class="form-control" id="number">
											      <option>1</option>
											      <option>2</option>
											      <option>3</option>
											      <option>4</option>
											      <option>5</option>
											    </select>
										 	 </div>
	  								        <button type="submit" class="btn btn-default"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Order Now</button>
										 </form>
						      		</div>
						    	</div>
						  	</div>
						</div>
					</div>
					<div class="col-md-12">
						<div class="news-letter">
							<div class="row">
								<div class="col-md-6 left">
									<h3>News Letter</h3>
									<p>join us now to get all news and special offers</p>
								</div>
								<div class="col-md-6 right">
									<form method="GET" class="form-horizontal" role="form">
										<input type="email" class="form-control" name="" placeholder="type your email here">
										<input type="submit" name="" value="join us">
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	<!-- @import "partials/footer" -->
	</body>
</html>
